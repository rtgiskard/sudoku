# .astylerc

# Brace Style Options
style=linux		# A8

# Tab Options
#indent=spaces=#	# s#
indent=tab=4		# t#
#indent=force-tab=#	# T#

# Brace Modify Options
#attach-namespaces	# xn
attach-classes		# xc
#attach-inlines		# xl
attach-extern-c		# xk
attach-closing-while	# xV

# Indentation Options
#indent-classes		# C
indent-modifiers	# xG
indent-switches		# S
#indent-cases		# K
#indent-namespaces	# N
indent-after-parens	# xU
#indent-labels		# L
indent-preproc-block	# xW
indent-preproc-define	# w
#indent-preproc-cond	# xw
